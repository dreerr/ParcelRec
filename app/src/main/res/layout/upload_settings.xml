<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <Switch
        android:id="@+id/api_enable_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Uploads"
        android:textSize="18sp" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="API URL"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/api_url_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="24" />

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Backup API URL"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/api_url_backup_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="24" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Interval (Minutes)"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/upload_interval_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="24"
        android:inputType="number" />

</LinearLayout>